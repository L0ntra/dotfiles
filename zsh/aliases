LSCOLORS=gxfxcxdxbxegedabagacad
export LSCOLORS
alias ls='ls -Gh'

alias goLint='/usr/local/Cellar/golangci-lint/1.27.0/bin/golangci-lint run'
alias goFmt='goimports -w .'
alias goTELib='go get -u formation.engineering/tenant-library'

alias gg='git log --all --graph --decorate --oneline --simplify-by-decoration'
alias gl='git log --oneline'
alias gl1='gl -n 1'
alias gc='git checkout'
alias gpf='git commit -am "f"; git push origin ${vcs_info_msg_0_}'
